<h1>TASKS</h1>

<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <div class="form-check ml-3">
      <input type="checkbox" id="complete-task" class="form-check-input" checked>
      <label for="complete-task" class="form-check-label"><p><%= link_to task.title, task_path(task.id) %></p></label>
      <%=link_to '✖', task_path(task.id), method: :delete, data: {confirm: 'Are you sure?'}%>
    </div>
  <% else %>
    <div class="form-check ml-3">
      <input type="checkbox" id="complete-task" class="form-check-input">
      <label for="complete-task" class="form-check-label"><p><%= "#{task.title}" %></p></label>
    <%=link_to '✖', task_path(task.id), method: :delete, data: {confirm: 'Are you sure?'}%>
    </div>
  <% end %>
<% end %>



<p> <%=link_to 'Create a new task!', new_task_path%></p>